<div>
    <div class="uk-inline-clip uk-transition-toggle uk-light" tabindex="0">
        <div class="uk-card uk-card-default uk-card-small uk-background-secondary">
            <div class="uk-card-body uk-padding-remove" style="user-select: none">
                <div class="uk-grid-small uk-flex-middle" uk-grid>
                    <div class="uk-width-1-6 uk-margin-remove">
                        <img class="b-radius-circle uk-align-center" width="140"
                             height="130"
                             src="{{ card.image }}">
                    </div>
                    <div class="uk-width-expand">
                        <p class="uk-card-title uk-margin-remove-bottom" style="color: #FDFDFD">{{ card.name }}</p>
                        <p class="uk-text-meta uk-margin-remove-top uk-text-middle" style="color: #c4c4c4">{{ card.artist }}</p>
                    </div>
                </div>
            </div>
        </div>
        {% block overlay_model %}

        {% endblock %}
    </div>
</div>